@model PostView

<a <a asp-controller="Posts" asp-action="Show" asp-route-id="@Model.Id" class="text-left text-xl font-bold hover:text-blue-500">@Model.Title</a>
<p class="md\:text-left">@Html.Raw(Model.Body)</p>
<div class="flex flex-row mt-3 ml-auto float-right">
	<p class="text-right text-slate-700 pt-1 mr-2">@Model.Email</p>
	<img gravatar-email="@Model.Email); " gravatar-size="80" class="rounded-full h-9 w-9 ml-0 hover:scale-125 transform transition duration-1" ml-0" alt="GravatarHelper.DefaultImageIdenticon" />
</div>